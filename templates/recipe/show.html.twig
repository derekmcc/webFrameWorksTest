{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}

    <h1>Recipe</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ recipe.id }}</td>
        </tr>
        <tr>
            <th>Author</th>
            <td>{{ recipe.author.username }}</td>
        </tr>
        <tr>
            <th>Reviews for this Drink</th>
            <td>{% for review in recipe.reviews %}
                <a href="{{ url('review_show', {'id':review.id}) }}">
                    {{ review.id }} :: {{ review.author.username }}
                </a>
        {% else %}
                (no reviews for this drink)
            {% endfor %}
            </td>
        </tr>
    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {% include 'recipe/_delete_form.html.twig' with {'identifier': recipe.id} only %}

{% endblock %}