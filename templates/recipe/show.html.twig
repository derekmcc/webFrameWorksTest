{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}

    <h1>Recipe</h1>

    <table>
        <tr>
            <th>Id</th>
            <td>{{ recipe.id }}</td>
        </tr>
        <tr>
            <th>Products for this Category</th>
            <td> {% for review in recipe.reviews %} {{ review.id }} :: {{ review.title }}
                    <br>
                {% else %} (no products for this category) {% endfor %}
            </td>
        </tr>
    </table>

    <a href="{{ path('recipe_index') }}">back to list</a>

    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>

    {% include 'recipe/_delete_form.html.twig' with {'identifier': recipe.id} only %}

{% endblock %}