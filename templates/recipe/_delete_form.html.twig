<form method="post" id="delete" action="{{ path('recipe_delete', {'id': identifier}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ identifier) }}">
    <input name="btn_delete" type="submit" value="Delete Drink" class="btn btn-outline-danger">
</form>